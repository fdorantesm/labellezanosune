---
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";

import "../styles/main.scss";

import Header from "./Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="La Belleza Nos Une es una organización sin fines de lucro enfocada en la transformación integral de la mujer, promoviendo la educación y los valores para vivir una vida en integridad y bienestar."
    />
    <link rel="icon" href="data:;base64,iVBORw0KGgo=" />
    <link rel="apple-touch-icon" href="data:;base64,iVBORw0KGgo=" />
    <meta content="https://labellezanosune.org/" property="og:url" />
    <link rel="canonical" href="https://labellezanosune.org/" />
    <meta
      content="La Belleza Nos Une - Transformación Integral de la Mujer | La Belleza Nos Une"
      property="og:title"
    />
    <meta
      name="twitter:title"
      content="La Belleza Nos Une - Transformación Integral de la Mujer | La Belleza Nos Une"
    />
    <meta content="website" property="og:type" />
    <meta
      property="og:description"
      content="La Belleza Nos Une es una organización sin fines de lucro enfocada en la transformación integral de la mujer, promoviendo la educación y los valores para vivir una vida en integridad y bienestar."
    />
    <meta
      name="twitter:description"
      content="La Belleza Nos Une es una organización sin fines de lucro enfocada en la transformación integral de la mujer, promoviendo la educación y los valores para vivir una vida en integridad y bienestar."
    />
    <meta property="og:site_name" content="La Belleza Nos Une" />
    <meta name="keywords" content="mujer, transformación, valores" />
    <meta property="og:image" />
    <meta name="twitter:image" />
    <meta content="" property="og:image:alt" />
    <meta content="" name="twitter:image:alt" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main class="app">
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    background: url("img/bg.png") repeat 0 0;
  }

  .app {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
</style>
